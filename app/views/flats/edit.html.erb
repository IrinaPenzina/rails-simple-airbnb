<h1>Edit a flat</h1>

<%= simple_form_for @flat do |f|%>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night%>
  <%= f.input :number_of_guests, collection: [1, 2, 3]%>
  <%= f.submit "submit", class: "btn btn-primary"%>
<% end%>

<%= link_to 'Back to all flats', flats_path%>
